!!! 5
%html
  %head
    %title FreeEdu
    = stylesheet_link_tag 'bootstrap'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar
      %h1.navbar-inner
        =link_to "FreeEdu", '/', :id => 'home_link', :style => "text-decoration: none; color:#339999 ;"
        .pull-right
          %h3.nav
            -if @current_user
              %li.btn-large
                %a{"href"=>settings_path}
                  %i.icon-wrench
                  Settings
          %h3.nav
            - if @current_user
              %li.dropdown.btn-large
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} 
                  %i.icon-user
                  =@current_user.name
                  %b.caret
                %ul.dropdown-menu.btn-small.pull-right{"role" => "menu", "aria-labelledby" => "dLabel"}
                  %li.btn-small
                    %a{"href" => logout_path}
                      %i.icon-share
                      Logout
            - else
              =link_to 'Login', auth_path, :method => :put, :style => "text-decoration: none"
    #main
      = render 'layouts/flash_messages'
    .container
      = yield
