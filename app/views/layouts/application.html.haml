!!! 5
%html
  %head
    %title FreeEdu
    = stylesheet_link_tag 'bootstrap'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar
      %h1.navbar-inner
        .pull-left
          %h1.nav
            %li
              %a.brand{:href => root_path, } FreeEdu
        .pull-right
          %h5.nav
            -if @current_user
              %li
                %a{"href"=>settings_path}
                  %i.icon-wrench
                  Settings
            
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} 
                  %i.icon-user
                  =@current_user.name
                  %b.caret
                %ul.dropdown-menu.pull-right{"role" => "menu", "aria-labelledby" => "dLabel"}
                  %li
                    %a{"href" => logout_path}
                      %i.icon-share
                      Logout
              %noscript
                %h5.nav
                  %li
                    %a{"href"=>logout_path}
                      %i.icon-share
                      Logout
            - else
              %li
                %a{"href"=>auth_path}
                  %i.icon-user
                  Login
    #main
      = render 'layouts/flash_messages'
    .container
      = yield
